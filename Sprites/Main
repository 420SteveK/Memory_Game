import tkinter as tk
from tkinter import *
from PIL import Image, ImageTk
import os
import random


class MainWindow:
    def __init__(self, master):
        self.master = master
        self.master.title("Sprite Viewer")
        self.master.geometry("800x600")

        self.canvas = Canvas(self.master, bg="white")
        self.canvas.pack(fill=BOTH, expand=True)

        self.load_sprites()
        self.display_random_sprite()

    def load_sprites(self):
        self.sprites = []
        sprite_dir = "Sprites"
        for filename in os.listdir(sprite_dir):
            if filename.endswith(".png"):
                img_path = os.path.join(sprite_dir, filename)
                img = Image.open(img_path)
                img.thumbnail((200, 200), Image.ANTIALIAS)
                self.sprites.append(ImageTk.PhotoImage(img))

    def display_random_sprite(self):
        if not self.sprites:
            return
        sprite = random.choice(self.sprites)
        self.canvas.create_image(400, 300, image=sprite)
        self.master.mainloop()
